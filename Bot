import discord
from discord.ext import commands
import os
from bot_logic import *
import random
import requests

intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix='$', intents=intents)

@bot.command()
async def mem(ctx):
    img_name = random.choice (os.listdir('imagen'))
    with open(f'imagen/{img_name}', 'rb') as f:
        picture = discord.File(f)
    # A continuaci칩n, podemos enviar este archivo como par치metro.
    await ctx.send(file=picture)


def get_duck_image_url():
    url = 'https://random-d.uk/api/random'
    res = requests.get(url)
    data = res.json()
    return data['url']

def get_dog_image_url():
    url = 'https://random-d.uk/api/random'
    res = requests.get(url)
    data = res.json()
    return data['url']

# Funci칩n para obtener una imagen aleatoria de un gato
def get_cat_image_url():
    url = 'https://api.thecatapi.com/v1/images/search'
    res = requests.get(url)
    data = res.json()
    return data[0]['url']

# Funci칩n para obtener una imagen aleatoria de un animal
def get_random_animal_image():
    animal_functions = [get_duck_image_url, get_cat_image_url, get_dog_image_url]
    chosen_function = random.choice(animal_functions)
    return chosen_function()

# Comando para obtener una imagen aleatoria de un animal
@bot.command()
async def animal(ctx):
    animal_image_url = get_random_animal_image()
    await ctx.send(animal_image_url)

bot.run("Token")
